{
	"compilerOptions": {
		"lib": [
			"ESNext",
			"DOM"
		],
		"target": "es2020",
		"module": "esnext",
		"strict": true,
		"removeComments": false,
		"exactOptionalPropertyTypes": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"isolatedModules": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"allowJs": true,
		"noEmit": true,
		"outDir": "lib",
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"paths": {
			// Make paths an absolute import since we'll be importing it from various depths
			"@types": [
				"types.ts"
			],
		},
	},
	"include": [
		"./src/**/*"
	]
}